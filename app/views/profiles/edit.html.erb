<div class="row">
  <%= form_for [@current_user, @profile], html: {class: 'col-md-4 col-md-offset-1'} do |f| %>
    <div class="form-group">
      <%= f.label [t('profile.first_name')].join, class: 'h4' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label [t('profile.last_name'), ':'].join, class: 'h4' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label [t('profile.description'), ':'].join, class: 'h4' %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label [t('profile.image'), ':'].join, class: 'h4' %>
      <%= f.text_field :image_url, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label [t('profile.country'), ':'].join, class: 'h4' %>
      <%= f.text_field :country, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label [t('profile.city'), ':'].join, class: 'h4' %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit t('profile.save'), class: 'btn btn-default pull-right' %>
    </div>
  <% end %>
<div>

