<!DOCTYPE html>
<html>
<head>
  <title>Event Project</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div id="main-header" class="container-fluid bg-white">
    <header class="row">
      <h1 class="col-md-6 h2"><%= link_to t('layout.title'), root_path %></h1>
      <nav class="col-md-6" id="main-nav">
        <ul class="list-inline pull-right">
          <li class="list-inline-item h3">
            <%= link_to t('layout.home'), root_path %>
          </li>

          <li class="list-inline-item h3">
            <%= t('layout.events') %>
          </li>

          <li class="list-inline-item dropdown h3">
            <button class="dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= t('layout.options') %>
            </button>

            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <% if @current_user %>
                <li>
                  <%= link_to t('layout.edit_profile'), ['/users/', @current_user.id, '/profile/edit'].join %></a>
                </li>

                <li>
                  <%= link_to t('layout.new_event'), new_event_path %>
                </li>

                <li>
                  <%= link_to t('layout.invite'), ['/users/', @current_user.id, '/invites'].join %>
                </li>
              <% end %>

              <hr class="m-b-0">

              <li>
                <% if @current_user %>
                  <%= link_to t('layout.log_out'), destroy_user_session_path, method: 'delete' %></a>
                <% else %>
                  <%= link_to t('layout.log_in'), new_user_session_path %>
                  <%= link_to t('layout.sign_up'), new_user_registration_path %>
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </nav>
    </header>

    <hr>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>

  <div class="container-fluid">
    <%= yield %>
  </div>
</body>
</html>
