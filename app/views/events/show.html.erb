<div id="show-event" class="row bg-light-grey">
  <div id="event-image-div" class="col-md-4">
    <div id="event-image">
      <img src="<%= @event.image_url %>">
    </div>
  </div>

  <div id="map" class="col-md-8" data-latitude="<%= @event.latitude %>" data-longitude="<%= @event.longitude %>"></div>

  <div id="event-info" class="col-md-8 col-md-offset-4 dft-border bg-white m-t">
    <h3><%= @event.title %></h3>
    <hr>
    <p><%= @event.description %></p>
  </div>


  <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["GOOGLE_MAPS_API_KEY"] %>&callback=initMap">
  </script>
</div>

